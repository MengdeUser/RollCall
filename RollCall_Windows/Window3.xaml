<Window x:Class="RollCall_Windows.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:RollCall_Windows"
        mc:Ignorable="d" Background="Transparent" ShowInTaskbar="False" Icon="/RollCall.ico" FontFamily="HarmonyOS Sans SC" WindowStyle="None" Topmost="True" HorizontalAlignment="Left" VerticalAlignment="Center" AllowsTransparency="True" ResizeMode="NoResize" Foreground="{x:Null}" Height="90">
    <Grid Margin="10,0,0,0">
        <tb:TaskbarIcon x:Name="tb" IconSource="/RollCall.ico" ToolTipText="RollCall主程序" NoLeftClickDelay="True">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="RollCall"/>
                    <MenuItem Header="帮助" Click="Help_Click"/>
                    <Separator />
                    <MenuItem Header="显隐程序" Click="OpenProgram_Click"/>
                    <MenuItem Header="修改名单" Click="MenuItem_Click"/>
                    <Separator />
                    <MenuItem Header="退出" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <Border>
            <StackPanel Orientation="Horizontal">
                <Button Content="点名" FontFamily="HarmonyOS Sans SC Black" FontSize="36" Padding="10,10,10,10" BorderBrush="{x:Null}" Foreground="#FF59A0D6" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Click">
                    <Button.Background>
                        <SolidColorBrush Color="#FF59A0D6" Opacity="0.2"/>
                    </Button.Background>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
