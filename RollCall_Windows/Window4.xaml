<Window x:Class="RollCall_Windows.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RollCall_Windows"
        mc:Ignorable="d" Background="#FF303030" Foreground="{x:Null}" Icon="/RollCall.ico"
        Title="RollCall点名菜单" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" FontFamily="HarmonyOS Sans SC" Width="500" Height="310">
    <Grid>
        <Border>
            <StackPanel Margin="40">
                <Label x:Name="NameLabel" Content="名字不超过七个字" FontFamily="HarmonyOS Sans SC Black" FontSize="48" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="5,20,5,20">
                    <Label.Background>
                        <SolidColorBrush Color="#FF59A0D6" Opacity="0.2"/>
                    </Label.Background>
                    <Label.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Label.Resources>
                </Label>
                <Border>
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,20" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="ButtonStart" Content="随机抽选" BorderBrush="{x:Null}" Foreground="#FF59A0D6" FontFamily="HarmonyOS Sans SC" FontSize="20" Padding="10,20,10,20" Margin="0,0,10,0" Click="ButtonStart_Click" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" IsDefault="True">
                            <Button.Background>
                                <SolidColorBrush Color="#FF59A0D6" Opacity="0.2"/>
                            </Button.Background>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button x:Name="ButtonEnd" Content="结束当前轮次" BorderBrush="{x:Null}" Foreground="#FF59A0D6" Padding="10,20,10,20" FontFamily="HarmonyOS Sans SC" FontSize="20" Margin="10,0,10,0" Click="ButtonEnd_Click" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button.Background>
                                <SolidColorBrush Color="#FF59A0D6" Opacity="0.2"/>
                            </Button.Background>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="修改名单" BorderBrush="{x:Null}" Foreground="#FF59A0D6" Padding="10,20,10,20" FontFamily="HarmonyOS Sans SC" FontSize="20" Margin="10,0,0,0" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button.Background>
                                <SolidColorBrush Color="#FF59A0D6" Opacity="0.2"/>
                            </Button.Background>
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
